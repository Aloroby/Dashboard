.setting-box.hide-box
    .toggle-box
        i.fa.fa-cog.fa-2x
    .option-box.color-box.text-center
        h4 Color Options
        - var themes = ["theme-one","theme-tow","theme-thre","theme-four","theme-five", "theme-six"]
        ul.list-unstyled
            each theme in themes
                li(data-color=theme class="active")
    .option-box.fonts-box.text-center
        h4 Fonts Options
        - var fonts = ["roboto","montserrat","nunito","source"]
        select.form-control 
            each font in fonts
                option(value=font) #{font}